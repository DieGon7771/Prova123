name: ğŸš€ Deploy to GitHub Pages

on:
  # Push su main trigger automatico
  push:
    branches: ["main"]
  
  # Permette trigger manuale dalla UI
  workflow_dispatch:

# DÃ  i permessi al GITHUB_TOKEN per deployare
permissions:
  contents: read
  pages: write
  id-token: write

# Permette solo una deploy per volta
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    
    runs-on: ubuntu-latest
    
    steps:
      - name: ğŸ“¥ Checkout
        uses: actions/checkout@v4
        
      - name: ğŸ” Inject TMDB API Key
        run: |
          echo "ğŸ”§ Iniettando API Key..."
          
          # Lista dei placeholder da cercare
          PLACEHOLDERS=(
            "TMDB_API_KEY_PLACEHOLDER"
            "INSERT_TMDB_KEY_HERE"
            "YOUR_API_KEY_HERE"
            "REPLACE_WITH_SECRET"
            "INSERISCI_API_KEY_TMDB_QUI"
          )
          
          for placeholder in "${PLACEHOLDERS[@]}"; do
            echo "ğŸ” Cercando: $placeholder"
            # Sostituisci in tutti i file HTML/JS
            find . -type f \( -name "*.html" -o -name "*.js" \) ! -path "./node_modules/*" ! -path "./.git/*" -exec grep -l "$placeholder" {} \; | while read file; do
              echo "   ğŸ“ Modificando: $file"
              sed -i "s/$placeholder/${{ secrets.MY_KEY }}/g" "$file"
            done
          done
          
          echo "âœ… API Key iniettata"
          
      - name: ğŸ› ï¸ Setup Pages
        uses: actions/configure-pages@v3
        
      - name: ğŸ“¦ Upload artifact
        uses: actions/upload-pages-artifact@v2
        with:
          path: "."  # Deploya tutta la directory
          
      - name: ğŸš€ Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v2
